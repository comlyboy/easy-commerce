{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"allowUnreachableCode": false,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"strictBindCallApply": false,
		"useUnknownInCatchVariables": false,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
    "paths": {
      "@app/common": [
        "libs/common/src"
      ],
      "@app/common/*": [
        "libs/common/src/*"
      ],
      "@app/helper": [
        "libs/helper/src"
      ],
      "@app/helper/*": [
        "libs/helper/src/*"
      ],
      "@app/utility": [
        "libs/utility/src"
      ],
      "@app/utility/*": [
        "libs/utility/src/*"
      ]
    }
  }
}